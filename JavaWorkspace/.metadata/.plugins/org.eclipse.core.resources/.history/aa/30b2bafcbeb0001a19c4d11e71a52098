package graphs;

import java.util.LinkedList;

class graph{
	int v;
	LinkedList<Integer> arr[];
	public graph(int v) {
		this.v = v;
//		int arr[] = new int[v];
		arr = new LinkedList[v];//arr can now store V LL
		for(int i=0;i<v;i++)
		{
			arr[i] = new LinkedList<>();
		}
	}
	void addEdge(int a,int b)
	{
		arr[a].add(b);
//		arr[b].add(a); if we want undirectional graph hen both statements required
	}
	
}
public class graphLL {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		graph graph = new graph(5);
		graph.addEdge(0, 1);
		graph.addEdge(0, 2);
		graph.addEdge(0, 3);
		graph.addEdge(1, 3);
		graph.addEdge(2, 4);
		graph.addEdge(3, 4);
	}

}
